		"react-beautiful-dnd": "^12.2.0",
		"react-dom": "^16.9.0",
		"react-redux": "^7.1.1",
		"react-router": "^5.0.1",
		"react-router-dom": "^5.0.1",
		"react-scripts": "3.3.0",
		"redux": "^4.0.5"
	},
	"devDependencies": {
		"@fortawesome/fontawesome-pro": "^5.12.0",
		"@fortawesome/fontawesome-svg-core": "^1.2.26",
		"@fortawesome/pro-light-svg-icons": "^5.12.0",
		"@fortawesome/react-fontawesome": "^0.1.8",
